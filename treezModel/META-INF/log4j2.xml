<?xml version="1.0" encoding="UTF-8"?> 
<!-- the warning about the grammar constraint can be ignored, see https://stackoverflow.com/questions/13904481/in-log4j2-how-do-i-associate-an-xml-schema-with-log4j2-xml  -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appenders>
		<Console
			name="Console"
			target="SYSTEM_OUT"
		>
			<PatternLayout pattern="%-6r [%t] %-5p %c{1} %x  : %m%n" />
			<filters>
				<ThresholdFilter level="DEBUG" />
			</filters>
		</Console>		

		<RollingFile
			name="RollingFile"
			fileName="Logfile.log"
			maxBackupindex="0"
			maxfileSize="5MB"
		>
			<PatternLayout pattern="%-6r [%t] %-5p %c{1} %x  : %m%n" />
			<filters>
				<ThresholdFilter level="INFO" />
			</filters>
		</RollingFile>	
		
	</appenders>

	<loggers>
		<root level="DEBUG">
			<appender-ref ref="Console" />
			<appender-ref ref="RollingFile" />			
		</root>
	</loggers>

</log4j:configuration>

